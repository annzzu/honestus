<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="auth_signup_fields_with_mobile"
                  name="Auth Signup/ResetPassword form fields"
                  inherit_id="auth_signup.fields">
            <xpath expr="//div[hasclass('field-name')]" position="after">
                <div class="mb-3 field-mobile">
                    <label for="mobile">Mobile</label>
                    <input type="text" name="mobile" t-att-value="mobile" id="mobile"
                           class="form-control form-control-sm"
                           placeholder="e.g. 9999"
                           required="required"/>
                </div>
            </xpath>
        </template>

        <template id="portal_my_details_fields_inherit"
                  inherit_id="portal.portal_my_details_fields">
            <xpath expr="//div[9]" position="before">
                <div t-attf-class="mb-3 #{error.get('mobile') and 'o_has_error' or ''} col-xl-6">
                    <label class="col-form-label label-optional" for="mobile">Mobile</label>
                    <input type="text" name="mobile"
                           t-attf-class="form-control #{error.get('mobile') and 'is-invalid' or ''}"
                           t-att-value="mobile or partner.mobile"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
